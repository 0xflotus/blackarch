package() {
  install -dm 755 "$pkgdir/etc/xdg/menus/applications-merged"
  install -dm 755 "$pkgdir/usr/share/applications"
  install -dm 755 "$pkgdir/usr/share/$pkgname"
  install -dm 755 "$pkgdir/usr/share/desktop-directories"
  install -dm 755 "$pkgdir/usr/share/icons/hicolor/32x32/apps"

  install -m 644 README "$pkgdir/usr/share/$pkgname"
  install -m 644 X-BlackArch.menu "$pkgdir/etc/xdg/menus/applications-merged/"
  install -m 644 *.png "$pkgdir/usr/share/icons/hicolor/32x32/apps/"
  install -m 644 *.directory "$pkgdir/usr/share/desktop-directories/"
}

